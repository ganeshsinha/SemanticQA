{
    "manifest_version": 3,
    "name": "SemanticQA",
    "version": "1.0.0",
    "description": "Playwright Locators Finder -Ganesh",
    "permissions": [
        "activeTab",
        "scripting",
        "contextMenus",
        "storage"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "styles.css"
            ],
            "run_at": "document_end"
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "SemanticQA - Playwright Locators Finder"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "styles.css"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}